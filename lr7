#include <iostream>
#include <iomanip>
#include <cmath>
using namespace std;
int main() {
    double y, x, h, minX, maxX;
    minX = 1;
    maxX = 2;
    h = 0.1;
    cout << "x -> [" << minX << ", " << maxX << "], h = " << h << endl;
    cout << setw(7) << "x" << "|" << setw(12) << "y" << endl;
    cout << setw(20) << setfill('-') << '\n' << setfill(' ');
    x = minX;
    while (x <= maxX) {
        y = sin(sqrt(x)) + exp(x) - 2;
        cout << fixed << setprecision(2)
            << setw(7) << x << "|" << setw(12) << y << endl;
        x += h;
    }
    cout << "\n\tDO_WHILE\n";
    cout << setw(7) << "x" << "|" << setw(12) << "y" << endl;
    cout << setw(20) << setfill('-') << '\n' << setfill(' ');
    x = minX;
    do {
        y = sin(sqrt(x)) + exp(x) - 2;
        cout << fixed << setprecision(2)
            << setw(7) << x << "|" << setw(12) << y << endl;
        x += h;
    } while (x <= maxX);
    return 0;
}